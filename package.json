{
  "name": "digital-form-builder",
  "version": "1.0.0",
  "description": "Digital forms runner",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node index.js",
    "dev": "NODE_ENV=development node index.js",
    "build:css": "bin/build-css",
    "build": "bin/build",
    "lint": "standard",
    "unit-test": "lab -v -P 'test' test/cases -r console -o stdout -r html -o unit-test.html -I version",
    "unit-test:dev": "lab -v -P 'test' --inspect-brk",
    "test": "NODE_ENV=test npm run lint && npm run unit-test",
    "postinstall": "npm run build",
    "a11y": "node test/audit/components && node lighthouse",
    "symlink-env": "./bin/symlink-config"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/UKForeignOffice/digital-form-builder"
  },
  "engines": {
    "node": "10.16.3",
    "npm": ">=6.0.0"
  },
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "@hapi/boom": "8.0.1",
    "@hapi/catbox": "10.2.3",
    "@hapi/catbox-memory": "4.1.1",
    "@hapi/catbox-redis": "^5.0.5",
    "@hapi/code": "7.0.0",
    "@hapi/crumb": "7.3.2",
    "@hapi/hapi": "18.4.0",
    "@hapi/lab": "21.0.0",
    "@hapi/scooter": "5.1.1",
    "@hapi/wreck": "16.0.1",
    "accept-language-parser": "1.5.0",
    "acorn": "6.4.0",
    "aws-sdk": "^2.622.0",
    "blankie": "4.1.1",
    "blipp": "3.1.1",
    "boom": "7.2.2",
    "chrome-launcher": "^0.11.2",
    "digital-form-builder-engine": "UKForeignOffice/digital-form-builder-engine#feature/multi-output",
    "dotenv": "8.2.0",
    "flat": "5.0.0",
    "form-data": "2.5.1",
    "good": "8.1.1",
    "good-console": "7.1.0",
    "good-file": "6.0.1",
    "good-squeeze": "5.1.0",
    "govuk-frontend": "3.2.0",
    "hapi-pulse": "2.4.0",
    "hapi-rate-limit": "4.1.0",
    "hapi-require-https": "^4.0.0",
    "hmpo-components": "2.3.0",
    "inert": "5.1.2",
    "ioredis": "4.14.1",
    "joi": "14.3.1",
    "lighthouse": "5.6.0",
    "nodemailer": "^6.4.2",
    "notifications-node-client": "4.7.0",
    "nunjucks": "3.1.4",
    "pdfmake": "0.1.39",
    "schmervice": "1.4.0",
    "shortid": "2.2.15",
    "sinon": "7.5.0",
    "standard": "12.0.1",
    "tmp": "0.1.0",
    "uuid": "3.4.0",
    "vision": "5.4.3",
    "yar": "9.1.0"
  },
  "devDependencies": {
    "cheerio": "1.0.0-rc.2",
    "code": "5.2.3",
    "lab": "18.0.0",
    "node-sass": "4.13.1"
  },
  "lighthouse": {
    "requiredScores": {
      "accessibility": 90
    }
  }
}
